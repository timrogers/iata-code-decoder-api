{
  "name": "airports-api",
  "version": "1.0.0",
  "description": "A simple API for returning data about global airports, sourced from Duffel",
  "main": "server.js",
  "scripts": {
    "generate": "node scripts/generate_airports_json",
    "start": "node src/index.js",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "build": "tsc",
    "prettier": "prettier src/**/*.ts",
    "prettier-fix": "prettier src/**/*.ts --write",
    "eslint": "eslint . --ext .ts",
    "eslint-fix": "eslint . --ext .ts --fix"
  },
  "author": "Tim Rogers <me@timrogers.co.uk>",
  "license": "MIT",
  "engines": {
    "node": "24.x"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@duffel/api": "^1.8.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^22.17.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "2.6.0",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^5.6.0"
  },
  "repository": "timrogers/airports-api"
}
